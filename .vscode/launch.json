  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha Tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["--timeout", "999999", "--colors", "${workspaceFolder}/test"],
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
